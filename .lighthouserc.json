{
  "ci": {
    "collect": {
      "startServerCommand": "npm run start",
      "startServerReadyPattern": "Ready",
      "startServerReadyTimeout": 120000,
      "url": [
        "http://127.0.0.1:3000/",
        "http://127.0.0.1:3000/collections/men",
        "http://127.0.0.1:3000/product/classic-oxford-shirt",
        "http://127.0.0.1:3000/search?q=shirt",
        "http://127.0.0.1:3000/checkout"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--headless=new --disable-dev-shm-usage --user-data-dir=.lighthouseci/chrome-profile"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.8
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.9
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.95
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
